    function handleWhatsAppOrder() {
        const phoneNumber = "6281359891122";
        const message = encodeURIComponent("Halo! Saya ingin memesan layanan laundry. Bisa tolong informasi lengkapnya?");
        const whatsappUrl = `https://wa.me/${phoneNumber}?text=${message}`;
        window.open(whatsappUrl, "_blank");
    }

    function scrollToPricing() {
        document.getElementById('pricing').scrollIntoView({ behavior: 'smooth' });
    }

    function toggleFAQ(index) {
        const content = document.getElementById(`faq-content-${index}`);
        const chevron = document.getElementById(`chevron-${index}`);
        if (openFAQIndex === index) {
            content.style.height = '0';
            chevron.style.transform = 'rotate(0deg)';
            openFAQIndex = null;
        } else {
            if (openFAQIndex !== null) {
                const prevContent = document.getElementById(`faq-content-${openFAQIndex}`);
                const prevChevron = document.getElementById(`chevron-${openFAQIndex}`);
                prevContent.style.height = '0';
                prevChevron.style.transform = 'rotate(0deg)';
            }
            content.style.height = 'auto';
            chevron.style.transform = 'rotate(180deg)';
            openFAQIndex = index;
        }
    }

    function handleContactSubmit(event) {
        event.preventDefault();
        const name = document.getElementById('contact-name').value;
        const message = document.getElementById('contact-message').value;
        const phoneNumber = "6281359891122";
        const whatsappMessage = `Nama: ${name}\nPesanan: ${message}`;
        const whatsappURL = `https://wa.me/${phoneNumber}?text=${encodeURIComponent(whatsappMessage)}`;
        window.open(whatsappURL, "_blank");
        document.getElementById('contact-name').value = '';
        document.getElementById('contact-message').value = '';
    }

    // Navbar scroll effect
    window.addEventListener('scroll', function() {
        const navbar = document.getElementById('navbar');
        if (window.scrollY > 10) {
            navbar.classList.add('bg-background/80', 'backdrop-blur-md', 'shadow-sm', 'border-b', 'border-border');
            navbar.classList.remove('bg-transparent');
        } else {
            navbar.classList.remove('bg-background/80', 'backdrop-blur-md', 'shadow-sm', 'border-b', 'border-border');
            navbar.classList.add('bg-transparent');
        }
    });
</script>


